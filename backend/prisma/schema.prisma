generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @unique @default(uuid()) @db.Uuid
  firstName String   @db.VarChar(100)
  lastName  String   @db.VarChar(100)
  userName  String   @unique @db.VarChar(100)
  password  String   @unique
  email     String   @unique @db.VarChar(100)
  isActive  Boolean  @default(true) @db.Boolean
  role      String[] @default(["manager"]) @db.VarChar(10)
  createAt  DateTime @default(now()) @db.Date
  updatedAt DateTime @updatedAt @db.Date
}

model Category {
  id      String @id @unique @default(uuid()) @db.Uuid
  catName String @unique @db.VarChar(100)
  dishes  Dish[]

  @@unique([id, catName])
}

model Dish {
  id           String   @id @unique @default(uuid()) @db.Uuid
  dishName     String   @unique @db.VarChar(100)
  price        Float    @db.Real
  description  String   @db.Text
  catId        Category @relation(fields: [categoryId, categoryName], references: [id, catName])
  categoryId   String   @db.Uuid
  categoryName String   @db.VarChar(100)
  createAt     DateTime @default(now()) @db.Date
  updatedAt    DateTime @updatedAt @db.Date
}
